package ar.edu.utn.frc.tup.tesis.pinceletas_commerce_service.services;

import jakarta.annotation.PostConstruct;
import jakarta.mail.MessagingException;
import jakarta.mail.internet.MimeMessage;
import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.mail.javamail.MimeMessageHelper;
import org.springframework.stereotype.Service;

import java.math.BigDecimal;

@Service
@RequiredArgsConstructor
@Slf4j
public class EmailService {

    private final JavaMailSender mailSender;

    private final ImageHostingService imageHostingService; // üÜï NUEVO

    @Value("${app.mail.from:noreply@pinceletas.com}")
    private String fromEmail;

    @Value("${spring.mail.username}")
    private String emailUsername;

    @PostConstruct
    public void init() {
        log.info("üîç === CONFIGURACI√ìN DE EMAIL DEBUG ===");
        log.info("üîç Email username: {}", emailUsername);
        log.info("üîç From email: {}", fromEmail);
        log.info("üîç === FIN DEBUG ===");
    }

    /**
     * Env√≠a un email cuando un producto favorito entra en descuento
     */
    public void enviarEmailDescuentoFavorito(
            String emailDestino,
            String nombreUsuario,
            String nombreProducto,
            BigDecimal precioOriginal,
            BigDecimal descuentoPorcentaje,
            BigDecimal precioConDescuento,
            String imagenProducto,
            Long productoId) {

        log.info("üìß Enviando email de descuento a: {} para producto: {}", emailDestino, nombreProducto);

        try {
            MimeMessage mimeMessage = mailSender.createMimeMessage();
            MimeMessageHelper helper = new MimeMessageHelper(mimeMessage, "utf-8");

            helper.setFrom(fromEmail);
            helper.setTo(emailDestino);
            helper.setSubject("üéâ ¬°Tu producto favorito est√° en descuento! - Pinceletas");

            String htmlContent = buildDescuentoFavoritoEmailContent(
                    nombreUsuario,
                    nombreProducto,
                    precioOriginal,
                    descuentoPorcentaje,
                    precioConDescuento,
                    imagenProducto,
                    productoId
            );

            helper.setText(htmlContent, true);

            mailSender.send(mimeMessage);
            log.info("‚úÖ Email de descuento enviado exitosamente a: {}", emailDestino);

        } catch (MessagingException e) {
            log.error("‚ùå Error enviando email de descuento a {}: {}", emailDestino, e.getMessage(), e);
            throw new RuntimeException("Error enviando email de descuento: " + e.getMessage());
        }
    }

    /**
     * Construye el contenido HTML del email de descuento
     */
    private String buildDescuentoFavoritoEmailContent(
            String nombreUsuario,
            String nombreProducto,
            BigDecimal precioOriginal,
            BigDecimal descuentoPorcentaje,
            BigDecimal precioConDescuento,
            String imagenProducto,
            Long productoId) {

        String urlProducto = "http://localhost:4200/productos/" + productoId;
        // üî• CORRECCI√ìN: Construcci√≥n correcta de la URL de la imagen
        String urlImagen;
        if (imagenProducto != null && !imagenProducto.isEmpty()) {
            // Si la imagen ya tiene la ruta completa con /uploads/
            if (imagenProducto.startsWith("/uploads/")) {
                urlImagen = "http://localhost:8080" + imagenProducto;
            }
            // Si solo tiene el nombre del archivo
            else if (imagenProducto.startsWith("uploads/")) {
                urlImagen = "http://localhost:8080/" + imagenProducto;
            }
            // Si es solo el nombre del archivo sin ruta
            else {
                urlImagen = "http://localhost:8080/uploads/" + imagenProducto;
            }

            log.info("üñºÔ∏è URL de imagen construida: {}", urlImagen);
        } else {
            urlImagen = "https://via.placeholder.com/300x200?text=Producto";
            log.warn("‚ö†Ô∏è No hay imagen de producto, usando placeholder");
        }

        return String.format("""
            <div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #f8f9fa; padding: 30px;">
                <div style="max-width: 600px; margin: auto; background-color: white; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); overflow: hidden;">
                    
                    <!-- Header -->
                    <div style="background: linear-gradient(135deg, #ED620C 0%%, #EBED6D 100%%); padding: 30px; text-align: center;">
                        <h1 style="color: #FFFFFF; margin: 0; font-size: 28px;">üéâ ¬°Gran Descuento!</h1>
                        <p style="color: #FFFFFF; margin: 10px 0 0 0; font-size: 16px;">Tu producto favorito est√° en oferta</p>
                    </div>

                    <!-- Body -->
                    <div style="padding: 30px; color: #333;">
                        <p style="font-size: 16px; margin-bottom: 20px;">Hola <strong>%s</strong>,</p>
                        
                        <p style="font-size: 16px; margin-bottom: 25px;">
                            ¬°Tenemos buenas noticias! üé® El producto que agregaste a favoritos ahora tiene un <strong style="color: #ED620C;">descuento especial</strong>.
                        </p>

                        <!-- Producto Card -->
                        <div style="border: 2px solid #EBED6D; border-radius: 10px; padding: 20px; margin: 25px 0; background-color: #fffef8;">
                            <div style="text-align: center; margin-bottom: 15px;">
                                <img src="%s" alt="%s" style="max-width: 100%%; height: auto; border-radius: 8px; max-height: 250px; object-fit: cover;">
                            </div>
                            
                            <h2 style="color: #ED620C; margin: 15px 0; font-size: 22px; text-align: center;">%s</h2>
                            
                            <!-- Precios -->
                            <div style="text-align: center; margin: 20px 0;">
                                <div style="margin-bottom: 10px;">
                                    <span style="font-size: 18px; color: #999; text-decoration: line-through;">$%.2f</span>
                                </div>
                                
                                <div style="background-color: #ED620C; color: white; padding: 8px 15px; border-radius: 20px; display: inline-block; margin-bottom: 10px;">
                                    <strong style="font-size: 20px;">%.0f%%%% OFF</strong>
                                </div>
                                
                                <div>
                                    <span style="font-size: 32px; color: #ED620C; font-weight: bold;">$%.2f</span>
                                </div>
                            </div>

                            <!-- Ahorro -->
                            <div style="background-color: #EBED6D; padding: 12px; border-radius: 8px; text-align: center; margin-top: 15px;">
                                <p style="margin: 0; color: #333; font-size: 16px;">
                                    üí∞ <strong>¬°Ahorr√°s $%.2f!</strong>
                                </p>
                            </div>
                        </div>

                        <!-- CTA Button -->
                        <div style="text-align: center; margin: 30px 0;">
                            <a href="%s" style="display: inline-block; background-color: #ED620C; color: white; padding: 15px 40px; text-decoration: none; border-radius: 30px; font-size: 18px; font-weight: bold; box-shadow: 0 4px 15px rgba(237, 98, 12, 0.3);">
                                Ver Producto üõí
                            </a>
                        </div>

                        <p style="font-size: 14px; color: #666; text-align: center; margin-top: 25px;">
                            ‚è∞ ¬°No dejes pasar esta oportunidad! Los descuentos pueden cambiar en cualquier momento.
                        </p>

                        <hr style="border: none; border-top: 1px solid #eee; margin: 25px 0;">

                        <p style="margin-top: 30px; font-size: 14px; color: #333;">
                            Saludos,<br>
                            <strong>Equipo Pinceletas üé®</strong>
                        </p>
                    </div>

                    <!-- Footer -->
                    <div style="background-color: #f3f3f3; text-align: center; padding: 20px; font-size: 12px; color: #777;">
                        <p style="margin: 0 0 10px 0;">¬© 2025 Pinceletas. Todos los derechos reservados.</p>
                        <p style="margin: 0;">
                            <a href="http://localhost:4200/favoritos" style="color: #ED620C; text-decoration: none;">Ver todos mis favoritos</a>
                        </p>
                    </div>
                </div>
            </div>
        """,
                nombreUsuario,
                urlImagen,
                nombreProducto,
                nombreProducto,
                precioOriginal,
                descuentoPorcentaje,
                precioConDescuento,
                precioOriginal.subtract(precioConDescuento),
                urlProducto
        );
    }
}
